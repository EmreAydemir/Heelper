<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TextInput -->

    <style name="textinputlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/md_blue_grey_300</item>
        <item name="android:layout_marginBottom">@dimen/_2sdp</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:background">@null</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="hintTextColor">@color/md_black_1000</item>
    </style>

    <style name="textinputlayout.password">
        <item name="endIconMode">password_toggle</item>
    </style>

    <style name="textinputedittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edt_bg</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxEms">1</item>
        <item name="android:paddingTop">@dimen/_16sdp</item>
        <item name="android:paddingBottom">@dimen/_16sdp</item>



    </style>


    <!-- MyButton -->

    <style name="mybutton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="mybtn_radius">@dimen/_12sdp</item>
        <item name="mybtn_backgroundColor">@color/md_black_1000</item>

    </style>














</resources>