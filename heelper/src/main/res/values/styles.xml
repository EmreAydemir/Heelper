<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TextInput -->

    <style name="textinputlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/md_blue_grey_300</item>
        <item name="android:layout_marginBottom">@dimen/_2sdp</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:background">@null</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="hintTextColor">@color/md_black_1000</item>
    </style>

    <style name="textinputlayout.password">
        <item name="endIconMode">password_toggle</item>
    </style>

    <style name="textinputedittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edt_bg</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxEms">1</item>
        <item name="android:paddingTop">@dimen/_16sdp</item>
        <item name="android:paddingBottom">@dimen/_16sdp</item>



    </style>


    <!-- MyButton -->

    <style name="mybutton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/mybutton_height</item>
        <item name="android:textSize">@dimen/mybutton_textSize</item>
        <item name="android:textColor">@color/mybutton_textColor</item>
        <item name="mybtn_radius">@dimen/mybutton_radius</item>
        <item name="mybtn_backgroundColor">@color/mybutton_backgroundColor</item>
        <item name="android:paddingLeft">@dimen/mybutton_paddingLeft</item>
        <item name="android:paddingRight">@dimen/mybutton_paddingRight</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="mybutton.center" parent="mybutton">
        <item name="android:gravity">center</item>
    </style>

    <style name="mybutton.left" parent="mybutton">
        <item name="android:gravity">left|center</item>
    </style>

    <style name="mybutton.right" parent="mybutton">
        <item name="android:gravity">right|center</item>
    </style>


    <style name="mybutton.center.margin" parent="mybutton.center">
        <item name="android:layout_marginTop">@dimen/mybutton_marginTop</item>
        <item name="android:layout_marginLeft">@dimen/mybutton_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/mybutton_marginRight</item>

    </style>

    <style name="mybutton.left.margin" parent="mybutton.left">
        <item name="android:layout_marginTop">@dimen/mybutton_marginTop</item>
        <item name="android:layout_marginLeft">@dimen/mybutton_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/mybutton_marginRight</item>

    </style>

    <style name="mybutton.right.margin" parent="mybutton.right">
        <item name="android:layout_marginTop">@dimen/mybutton_marginTop</item>
        <item name="android:layout_marginLeft">@dimen/mybutton_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/mybutton_marginRight</item>

    </style>














</resources>